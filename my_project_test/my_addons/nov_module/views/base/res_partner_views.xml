<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- inherit partner form view -->
        <record id="view_res_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
            	<xpath expr="//sheet" position="before">
	            	<header>
                        <button name="button_validate_partner" string="Validate" type="object" class="btn-primary" attrs="{'invisible': ['|',('supplier', '=', True),('state','=','validated')]}"/>
	            		<field name="state"  widget="statusbar" statusbar_visible="no_validated,validated" attrs="{'invisible': [('supplier', '=', True)]}"/>
	            	</header>
	            </xpath>
            	<xpath expr="//page[@name='sales_purchases']" position="after">
            		<page name="other_informations" string="Other Informations">
            			<group>
            				<field name="compte"/>
            				<field name="ice"/>
            				<field name="rc"/>
                            <field name="cnss"/>
            			</group>
            		</page>

                    <page name="partner_limits" string="Partner Limits">
                        <field name="partner_credits_ids" widget="one2many_list">
                            <tree editable="bottom">
                                <field name="partner_id" invisible="1"/>
                                <field name="partner_credit"/>
                                <field name="company_id"/>
                            </tree>
                        </field>
                    </page>
            	</xpath>
            </field>
        </record>
    </data>
</odoo>